<%= stylesheet_link_tag "contact" %>
<div id="column1">
<%= form_for @inquiry do |f| %>
  <%= error_messages_for @inquiry %>

  <div class="field">
    <%= f.select :subject, options_for_subject %>
  </div>

  <div class="field">
    <%= f.text_field :name, :placeholder => "nome" %>
  </div>

  <div class="field">
    <%= f.text_field :email, :placeholder => "email" %>
  </div>

  <div class="field">
    <%= f.text_area :message, :placeholder => "escreva aqui sua mensagem" %>
  </div>

  <%= f.captcha %>

  <p><%= f.submit  "Envie", :class => "button" %></p>
<% end %>
</div>

<%= render "sidebar" %>

